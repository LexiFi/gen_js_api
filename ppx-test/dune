(rule
 (targets extension.ml.result)
 (deps extension.ml)
 (action
  (run ppx/main.exe --impl %{deps} -o %{targets})))

(rule
 (alias runtest)
 (package gen_js_api)
 (action
  (diff expected/extension.ml extension.ml.result)))

(rule
 (targets issues.ml.result)
 (deps issues.ml)
 (action
  (run ppx/main.exe --impl %{deps} -o %{targets})))

(rule
 (alias runtest)
 (package gen_js_api)
 (enabled_if
  (>= %{ocaml_version} 4.09))
 (action
  (diff expected/issues.ml issues.ml.result)))

